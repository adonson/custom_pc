= render "shared/header" # ヘッダー呼び出し
.show
  .pc_case
    .pc_case__head
    -# 注意情報
    .pc_case__bottom
      .pc_case__bottom__left
        .pc_case__bottom__left__image
          = image_tag "pc_case/#{@pc_case.image}", class: "image"
      .pc_case__bottom__right
        .table
          %table
            %tr.name_maker
              %td.name 名称
              %td.p_name
                = @pc_case.name
              %td.maker メーカー
              %td.p_maker
                = @pc_case.maker.name
            %tr.release_date
              %td.release_ja 国内発売日
              %td.p_release_ja
                = @pc_case.release_ja
              %td.release_g 世界発売日
              %td.p_release_g
                = @pc_case.release_g
            %tr.factor
              %td.pc_case_factor 対応ファクター
              %td.p_pc_case_factor
                - @pc_case_factors.each do |factor|
                  = factor.name
                  %br
            %tr.shadow_bay
              %td.shadow_bay_2_5 2.5インチシャドウベイ
              %td.p_shadow_bay_2_5
                - if @pc_case.shadow_bay_2_5.nil? 
                  0                
                = @pc_case.shadow_bay_2_5
              %td.shadow_bay_3_5 3.5インチシャドウベイ
              %td.p_shadow_bay_3_5
                - if @pc_case.shadow_bay_3_5.nil? 
                  0
                = @pc_case.shadow_bay_3_5
            %tr.bay
              %td.bay_3_5 3.5インチベイ
              %td.p_bay_3_5
                - if @pc_case.bay_3_5.nil? 
                  0
                = @pc_case.bay_3_5
              %td.bay_5_2_5 5.25インチベイ
              %td.p_bay_5_2_5
                - if @pc_case.bay_5_2_5.nil? 
                  0
                = @pc_case.bay_5_2_5
            %tr.color_c
              %td.color カラー
              %td.p_color
                = @pc_case.color
              %td.usb_type_c usb type-c
              %td.p_usb_type_c
                - if @pc_case.usb_type_c.nil? 
                  0
                = @pc_case.usb_type_c
            %tr.usb
              %td.usb3_1 usb 3.1
              %td.p_usb3_1
                - if @pc_case.usb3_1.nil? 
                  0
                = @pc_case.usb3_1
              %td.usb3_0 usb 3.0
              %td.p_usb3_0
                - if @pc_case.usb3_0.nil? 
                  0
                = @pc_case.usb3_0
              %td.usb2_0 usb 2.0
              %td.p_usb2_0
                - if @pc_case.usb2_0.nil? 
                  0
                = @pc_case.usb2_0
            %tr.mic_headphone
              %td.mic マイク端子
              %td.p_mic
                - if @pc_case.mic.nil? 
                  0
                = @pc_case.mic
              %td.headphone ヘッドホン端子
              %td.p_headphone
                - if @pc_case.headphone.nil? 
                  0
                = @pc_case.headphone
            %tr.size
              %td.width 幅(mm)
              %td.p_width
                - if @pc_case.width.nil? 
                  0
                = @pc_case.width
              %td.height 高さ(mm)
              %td.p_height
                - if @pc_case.height.nil? 
                  0
                = @pc_case.height
              %td.depth 奥行き(mm)
              %td.p_depth
                - if @pc_case.depth.nil? 
                  0
                = @pc_case.depth
            %tr
= render "shared/footer" # フッター呼び出し